@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container form-control w-[700px] my-20 p-12 rounded-lg shadow border-none">
    <div class="mb-6">
        <p class="text-3xl font-semibold text-center">Login</p>
    </div>
    <form id="account" method="post" class="grid grid-cols-1 gap-3">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="form-group">
            <label asp-for="Input.Email" class="form-label">Email</label><br>
            <input asp-for="Input.Email" class="input input-bordered input-warning w-full max-w-2xl"
                autocomplete="username" aria-required="true" placeholder="name@example.com" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Password" class="form-label">Password</label><br>
            <input asp-for="Input.Password" class="input input-bordered input-warning w-full max-w-2xl"
                autocomplete="current-password" aria-required="true" placeholder="password" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-control border-none w-[25%]">
            <label asp-for="Input.RememberMe" class="cursor-pointer label">
                <input type="checkbox" class="checkbox checkbox-warning" asp-for="Input.RememberMe" />
                <span class="label-text">Remember Me</span>
            </label>
        </div>
        <div>
            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-warning">Log in</button>
        </div>
        <div class="flex justify-between">
            <p>
                <a class="hover:text-yellow-400" id="forgot-password" asp-page="./ForgotPassword">Forgot your
                    password?</a>
            </p>
            <p>
                <a class="hover:text-yellow-400" id="register" asp-page="./Register">Create new account</a>
            </p>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
