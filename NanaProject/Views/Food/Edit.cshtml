@model NanaProject.Models.Food

@{
    ViewData["Title"] = "Edit";
}


<div class="container form-control w-[700px] my-20 p-12 rounded-lg shadow border-none">
    <h1 class="text-center text-3xl font-semibold text-yellow-400 mb-4">Modify Exist Supply</h1>
    <div class="">
        <form asp-action="Edit" class="grid grid-cols-2 gap-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FoodName" class="label">Name</label>
                <input asp-for="FoodName" type="text" placeholder="Supply Name"
                    class="input input-bordered input-warning w-full max-w-xs" />
                <span asp-validation-for="FoodName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CateId" class="label">Category</label>
                <select asp-for="CateId" class="select select-warning w-full max-w-xs"></select>
                <span asp-validation-for="CateId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="label">Quantity</label>
                <input asp-for="Quantity" type="number" placeholder="Supply Quantity"
                    class="input input-bordered input-warning w-full max-w-xs" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="label">Status</label>
                <select asp-for="Status" class="select select-warning w-full max-w-xs"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoodDescription" class="label"></label>
                <input asp-for="FoodDescription" type="text" placeholder="Food Description"
                    class="input input-bordered input-warning w-full max-w-xs" />
                <span asp-validation-for="FoodDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoodPhoto" class="label">Image</label>
                <input asp-for="FoodPhoto" type="Text" placeholder="Supply Image"
                    class="input input-bordered input-warning w-full max-w-xs" />
                <span asp-validation-for="FoodPhoto" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <input type="submit" value="Update" class="btn btn-warning" />
                <a class="btn btn-primary" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
