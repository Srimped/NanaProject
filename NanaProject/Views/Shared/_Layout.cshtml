<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NanaProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NanaProject.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    <header>
        <div class="p-4 w-full bg-transparent absolute">
            <div class="flex gap-16">
                <a class="text-3xl text-white" asp-area="" asp-controller="Home" asp-action="Index">NanaProject</a>
                <ul class="flex gap-10">
                    <li class="text-xl text-white">
                        <a class="hover:underline" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="text-xl text-white ">
                        <a class="hover:underline" asp-area="" asp-controller="Pet" asp-action="Index">Pets</a>
                    </li>
                    <li class="text-xl text-white">
                        <a class="hover:underline" asp-area="" asp-controller="Food" asp-action="Index">Food</a>
                    </li>
                    <li class="text-xl text-white">
                        <a class="hover:underline" asp-area="" asp-controller="Home" asp-action="">About Us</a>
                    </li>
                    <li class="text-xl text-white">
                        <a class="hover:underline" asp-area="" asp-controller="Home" asp-action="">Contact</a>
                    </li>
                </ul>
            </div>
    </header>
    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - NanaProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
